<%- model_class = Setor -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @setor.nome %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              setores_path, :class => 'btn' %>
  <% if can? :update, @setor %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_setor_path(@setor), :class => 'btn' %>
  <% end %>
  <% if can? :destroy, @setor %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  setor_path(@setor),
                  :method => 'delete',
                  :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'VocÃª tem certeza?'))},
                  :class => 'btn btn-danger' %>
  <% end %>
</div>
