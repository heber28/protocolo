<%- model_class = Setor -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table id="setores" class="datatables table table-striped table-condensed">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:nome) %></th>
    <% if current_user %>
        <th><%= t '.actions', :default => t("helpers.actions") %></th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <% @setores.each do |setor| %>
      <tr>
        <td><%= setor.nome %></td>
        <% if current_user %>
            <td>
              <%= link_to 'Ver', setor_path(setor), :class => 'btn btn-mini' %>
              <% if can? :update, setor %>
                  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                              edit_setor_path(setor), :class => 'btn btn-mini' %>
              <% end %>
              <% if can? :destroy, setor %>
                  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                              setor_path(setor),
                              :method => :delete,
                              :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'VocÃª tem certeza?'))},
                              :class => 'btn btn-mini btn-danger' %>
              <% end %>
            </td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<% if can? :create, @setores %>
    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_setor_path,
                :class => 'btn btn-primary' %>
<% end %>
